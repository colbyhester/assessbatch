<aura:component implements="flexipage:availableForAllPageTypes" access="global" controller='ColumnBtnController'>
    <aura:attribute name='cat' type='string'/>
    <aura:attribute name='type' type='string'/>
    <aura:attribute name='point' type='string'/>
     
    <!--event to say save button was clicked-->
    <aura:registerEvent name="DynComp" type="c:DynComp"/>
   
    <!-- Used to return picklist value of Assess Type-->
    <aura:attribute name="picklistValues" type="Object" />
    <c:PicklistComponent sObjectName='Caliber_Assessment__c' fieldName='Assessment_Type__c' picklistValues='{!v.picklistValues}' />
    
    <!--Used to return values for Caliber Category-->
    <aura:attribute name='Category' type='Caliber_Category__c[]'/>
    <aura:handler name="init" value="{!this}" action="{!c.doYes}" />
    
    <ui:button class="slds-align_absolute-center" label="Create Assignement" press="{!c.openmodal}"  /> 
    <div role="dialog" tabindex="-1" aria-labelledby="header43" aura:id="Modalbox" class="slds-modal slds-modal_large">
        <div class="slds-modal__container" style="width: 65%;">
            <div class="slds-modal__header">
                EDIT
            </div>
            <div class="slds-modal__content slds-p-around--medium">
                <!--FIRSTSECTION-->
                <div class="slds-p-left_xx-large slds-p-right_xx-large">
                    <div class="slds-page-header" style="padding-top: 9px; padding-bottom: 9px;, padding-right: 9px;, padding-left: 10px;">
                        <h3 style="font-size: 1rem;" title="">Create New Assignement</h3>
                    </div> 
                </div>    
                <div class="slds-grid slds-p-top_medium">
                    <div class="slds-size_6-of-12 slds-p-left_xx-large slds-p-horizontal_x-large " >
                        
                       <!--User entry for Category-->  
                       <lightning:select aura:id='input1' value='{!v.cat}'  label="Assessment Category" name="AssCat" > 
                            <option value="Please Select One" default="true" disabled="true" >Please Select One</option>
                        <aura:iteration items="{!v.Category}" var="category">
                            <option value="{!category.Name}">{!category.Name}</option>
                        </aura:iteration>
                       </lightning:select>
                    </div>
                    <div class="slds-size_5-of-12 slds-p-left_xx-small slds-p-horizontal_x-large " >
                        
                         <!--User entry for Type-->  
                          <lightning:select aura:id='input1' label="Assignment Category" name="AssCat" value="{!v.Caliber_Assessment__c.Assessment_Type__c}">       
            				<option value="">Choose one...</option>
            					<aura:iteration items="{!v.picklistValues}" var="item">
               						 <option value="{!item.value}">
                   						 {!item}
               						 </option>
          			 		   </aura:iteration>
      					  </lightning:select>
                    </div>
                </div>
                
                <div class="slds-grid slds-p-top_x-small">
                    <div class="slds-size_6-of-12 slds-p-left_xx-large slds-p-horizontal_x-large " >
                        
                           <!--User entry for Points-->  
                        <lightning:input aura:id='input3' value='{!v.point}' label="Max Points" name="myname"  /> 
                    </div>
                </div>
            </div>
            <div class="slds-modal__footer">
                <ui:button label="save" press="{!c.HandleIt}" />
                <ui:button label="cancel" press="{!c.closeModal}"  />
            </div>
        </div>
    </div>
    
</aura:component>